Config { font = "xft:DejaVu Sans Mono:size=11"
       , borderColor = "black"
       , border = TopB
       , bgColor = "black"
       , fgColor = "grey"
       , position = Static { xpos = 0, ypos = 0, width = 1728, height = 22 }
       , allDesktops = False
       , lowerOnStart = True
       , commands = [ Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run DateZone "%a %D %H:%M" "en_AU.UTF-8" "Australia/Sydney" "date" 10
                    , Run DateZone "%H" "es_CO.UTF-8" "America/Bogota" "col" 10
                    , Run DateZone "%H" "se_SE.UTF-8" "Europe/Stockholm" "swe" 10
                    , Run Kbd [("us(intl)", "US-INT"), ("us", "US")]
                    , Run StdinReader
                    , Run DateZone "%H:%M" "es_CO.UTF-8" "America/Bogota" "col_time" 10
                    , Run DynNetwork ["-t", "Net(<dev>): <rx>Kb/<tx>Kb" ,"-L","0","-H","550","--normal","green","--high","red"] 10
                    , Run Kbd [("us(intl)", "US-INT"), ("us", "US")]
                    , Run BatteryP ["BAT0"]
                                   ["-t", "Bat: <left>%(<acstatus>)"
                                   , "-L", "10", "-H", "80"
                                   , "-l", "red", "-h", "green"
                                   ] 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %dynnetwork% | %cpu% | %memory% * %swap% * %battery% | [%kbd%] <fc=#ee9a00>%date%</fc> (%col%)-(%swe%)"
       }
