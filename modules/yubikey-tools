#%Module1.0#####################################################################


module-whatis	"yubikey-tools"

set             base_dir        /home/agomezl/opt
set             yubico_lib      $base_dir/yubico-c
set             yubico_cmd      $base_dir/yubikey-personalization

prepend-path    PATH            $yubico_lib/bin
prepend-path    PATH            $yubico_cmd/bin
prepend-path    LD_LIBRARY_PATH $yubico_lib/lib
prepend-path    LIBRARY_PATH    $yubico_lib/lib
prepend-path    C_INCLUDE_PATH  $yubico_lib/include
prepend-path    CPLUS_INCLUDE_PATH $yubico_lib/include
prepend-path    C_INCLUDE_PATH  $yubico_cmd/include
prepend-path    CPLUS_INCLUDE_PATH $yubico_cmd/include
prepend-path    PKG_CONFIG_PATH $yubico_cmd